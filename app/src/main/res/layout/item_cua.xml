<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout_itemcua"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_big"
    >
    <ImageView
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="@dimen/layout_width_heigth_big"
        android:layout_height="@dimen/layout_width_heigth_big"
        android:src="@drawable/cua"
        android:id="@+id/item_image_cua"
        />
    <RelativeLayout
        android:layout_width="@dimen/layout_width_heigth_big"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cua"
            android:textSize="@dimen/text_13"
            android:textColor="@color/colorPrimary"
            android:id="@+id/item_tencua"
            android:maxLines="2"
            />
    </RelativeLayout>
</LinearLayout>


</LinearLayout>